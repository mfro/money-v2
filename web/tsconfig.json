{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "importsNotUsedAsValues": "remove",
    "moduleResolution": "node",
    "preserveValueImports": false,
    "allowJs": true,
    "types": [
      "gapi",
      "gapi.client.drive",
      "google.accounts"
    ],
    "lib": [
      "ES2019",
      "DOM",
      "DOM.Iterable",
      "ES2021.WeakRef"
    ],
  }
}
