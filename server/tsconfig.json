{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "strict": true,

        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "rootDir": "..",

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "dominion.core": ["../core/src"],
            "dominion.core/*": ["../core/src/*"],
        },

        "lib": [
            "ES2019",
            "ES2021.WeakRef"
        ]
    },
    "include": [
        "./src/main.ts",
        "./src/**/*.d.ts",
    ]
}
